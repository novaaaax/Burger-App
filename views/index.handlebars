<h2>Avaible Burgers <i class="fas fa-utensils"></i></h2>
<ul class="container">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Devoured Burgers!</h2>
<ul class="container">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerApp">Burger Name:</label>
    <input type="text" id="burgerName" name="burger_name">
  </div>

  <button class="submit" type="submit">Add Burger</button>
</form>
